<div class="search">
  <h1>Search for:</h1>
  <%= form_tag(movies_path, method: "get") do %>
    <div class="form-group">
      <%= text_field_tag(:search, nil, placeholder: 'Title or Director') %>
    </div>
    <div class="form-group">
    <%= select_tag "duration", options_for_select([["Under 90 minutes", "< 90"], ["Between 90 and 120 minutes", "between 90 and 120"], ["Over 120 minutes", "> 120"]]) %>
    </div>
    <%= submit_tag("Search") %>
  <% end %>
</div>